cmake_minimum_required(VERSION 2.8.4)
project(preview)

set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=c++0x")

INCLUDE(FindPkgConfig)
PKG_SEARCH_MODULE(SDL2 REQUIRED sdl2)
PKG_SEARCH_MODULE(SDL2IMAGE REQUIRED SDL2_image>=2.0.0)

set(SDL2_INCLUDE_DIR /usr/local/include/SDL2/)
set(SDL2_LIBRARIES /usr/local/lib/libSDL2-2.0.so)

set(SDL2IMAGE_INCLUDE_DIRS /usr/local/include/SDL2/)
set(SDL2IMAGE_LIBRARIES /usr/local/lib)

MESSAGE(${SDL2IMAGE_INCLUDE_DIRS})
MESSAGE(${SDL2IMAGE_LIBRARIES})
INCLUDE_DIRECTORIES(${SDL2_INCLUDE_DIRS} ${SDL2IMAGE_INCLUDE_DIRS})

add_executable(liveview main.c)
TARGET_LINK_LIBRARIES(liveview ${SDL2_LIBRARIES} ${SDL2IMAGE_LIBRARIES})

